<div class="col-md-3">
<%= render 'users/user_info', {user: @user, book: @book_new} %>
</div>
<div class="col-md-9">
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%#= image_tag book.user.get_profile_image(80,80) %></td>
        <td><%= book.title %></td>
        <td><%= book.opinion %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div