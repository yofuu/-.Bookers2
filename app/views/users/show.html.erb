<%= render 'users/user_info', {user: current_user, book: @book_new} %>


<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.get_profile_image(80,80) %></td>
        <td><%= book.title %></td>
        <td><%= book.opinion %></td>
      </tr>
    <% end %>
  </tbody>
</table>