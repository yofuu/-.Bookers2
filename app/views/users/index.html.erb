<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">
<%= render 'users/user_info', {user: current_user, book: @book_new} %>
</div>
<div class="col-md-8 offset-md-1">
<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(80,80) %></td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show' , user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>