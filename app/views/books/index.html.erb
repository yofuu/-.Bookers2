<%= render 'users/user_info', {user: current_user, book: @book_new} %>


     <p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_new.each do |book| %>
      <tr>
        <td><%= image_tag book.get_profile_image(100,100) %></td>
        <td><%= book.title %></td>
        <td><%= book.opinion %></td>
        <td><%#= link_to 'Show' , book_path(book.id) %></td>
        <td><%#= link_to 'edit' , edit_book_path(book.id) %></td>
        <td><%#= link_to 'Destroy' , book_path(book.id) ,method: :delete,"data-confirm"=>"Are you sure?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
